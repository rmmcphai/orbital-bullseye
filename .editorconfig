root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{c,cc,cpp,cxx,h,hh,hpp,hxx}]
indent_style = space
indent_size = 4
tab_width = 4

[*.cmake]
indent_style = space
indent_size = 4
tab_width = 4

[CMakeLists.txt]
indent_style = space
indent_size = 4
tab_width = 4

[*.md]
trim_trailing_whitespace = false
